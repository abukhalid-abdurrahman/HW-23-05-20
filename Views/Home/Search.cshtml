@model PersonViewModel
@{
    ViewData["Title"] = "Поиск";
}
<h3 style="display: block;">Поиск сотрудника: </h3>
                <form method="post">
                    <table>
                        <tr>
                            <td>Имя:</td>
                            <td><input class="form-control" type="text" name="LastName"/></td>
                        </tr>
                        <tr>
                            <td>Фамилия:</td>
                            <td><input class="form-control" type="text" name="FirstName"/></td>
                        </tr>
                        <tr>
                            <td>Отчество:</td>
                            <td><input class="form-control" type="text" name="MiddleName"/></td>
                        </tr>
                        <tr>
                            <td><input class="btn btn-primary" type="submit" value="Найти"/><td>
                        </tr>
                    </table>
                </form>
@if(Model != null)
{
    <h3>Найден: @Model.LastName</h3>
    <h3>Фамилия: @Model.FirstName</h3>
    <h3>Отчество: @Model.MiddleName</h3>
}