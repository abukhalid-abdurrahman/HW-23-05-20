@{
    ViewData["Title"] = "Добавить Сотрудника";
}
            <div>
                <h3>Форма добавления сотрудника</h3>
                <form method="post">
                    <table>
                        <tr>
                            <td>Имя:</td>
                            <td><input class="form-control" type="text" name="LastName"/></td>
                        </tr>
                        <tr>
                            <td>Фамилия:</td>
                            <td><input class="form-control" type="text" name="FirstName"/></td>
                        </tr>
                        <tr>
                            <td>Отчество:</td>
                            <td><input class="form-control" type="text" name="MiddleName"/></td>
                        </tr>
                        <tr>
                            <td><input class="btn btn-primary" type="submit" value="Отправить"/><td>
                        </tr>
                    </table>
                </form>
            </div>